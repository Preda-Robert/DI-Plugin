{
  "name": "di-plugin",
  "displayName": "Dependency Injection Plugin",
  "description": "C# dependency injection: analyze constructors, detect missing registrations and circular dependencies, suggest builders/factories.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:csharp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "di-plugin.analyzeFile",
        "title": "DI: Analyze current file"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "tree-sitter": "^0.21.0",
    "tree-sitter-c-sharp": "^0.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
